generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pokemon {
  id             String   @id @default(uuid()) @map("_id")
  name           String   @unique
  types          String[]
  abilities      String[]
  imageUrl       String
  hp             Int
  attack         Int
  defense        Int
  specialAttack  Int
  specialDefense Int
  speed          Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  email     String   @unique
  password  String
  wins      Int      @default(0)
  lost      Int      @default(0)
  played    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model game {
  id            String      @id @default(uuid()) @map("_id")
  Player1       String
  Player2       String
  result        GAME_STATUS
  wonby         String
  lostby        String
  Player1Turn1 Json?
  Player1Turn2 Json?
  Player1Turn3 Json?
  Player2Turn1 Json?
  Player2Turn2 Json?
  Player2Turn3 Json?
  Player1Cards  Json?
  Player2Cards  Json?
  turn1         Json?
  turn2         Json?
  turn3         Json?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum GAME_STATUS {
  STARTED
  ENDED
  GOINGON
}
